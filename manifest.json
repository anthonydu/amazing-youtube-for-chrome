{
  "name": "Amazing YouTube for Chrome",
  "version": "1.0.1",
  "description": "Simplifies YouTube's Interface",
  "manifest_version": 3,
  "author": "Anthony Du",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Amazing YouTube for Chrome"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["styles.css"]
    }
  ]
}
